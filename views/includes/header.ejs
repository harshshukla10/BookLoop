<!-- Production Bootstrap Header with Custom Aesthetic Styling -->
<style>
    :root {
      --primary: #3B82F6;
      --secondary: #16A34A;
      --accent: #F59E42;
      --background: #F9FAFB;
      --text: #111827;
      --brand-font: 'Inter', 'Roboto', 'Open Sans', Arial, sans-serif;
      --header-blur: blur(8px);
    }
  
    header.bookloop-header {
      background: #6071cf;
      color: #fff;
      font-family: var(--brand-font);
      box-shadow: 0 4px 24px rgba(17,24,39,0.13);
      position: sticky;
      top: 0;
      z-index: 1050;
      backdrop-filter: var(--header-blur);
      transition: box-shadow 0.3s;
    }
    .navbar .navbar-brand {
      font-weight: 900;
      font-size: 2.1rem;
      letter-spacing: 1px;
      color: #fff !important;
      display: flex;
      align-items: center;
      gap: 0.65rem;
      text-shadow: 0 2px 12px rgba(59,130,246,0.14);
    }
    .navbar .brand-logo {
      width: 2.5rem;
      height: 2.5rem;
      object-fit: contain;
      border-radius: 50%;
      box-shadow: 0 2px 8px rgba(59,130,246,0.14);
      background: #fff;
      padding: 0.15rem;
    }
    .navbar .nav-link {
      color: #fff !important;
      font-weight: 500;
      font-size: 1.15rem;
      border-radius: 50px;
      transition: background 0.18s, color 0.18s, font-weight 0.18s;
      padding: 0.45rem 1.2rem;
      margin-right: .35rem;
      letter-spacing: 0.3px;
      position: relative;
    }
    .navbar .nav-link.active,
    .navbar .nav-link:hover,
    .navbar .nav-link:focus {
      background: var(--accent);
      color: #fff !important;
      font-weight: 700;
      box-shadow: 0 2px 8px rgba(245,158,66,0.14);
      text-shadow: 0 1px 7px rgba(0,0,0,0.09);
      outline: none;
    }
    .navbar .btn-login {
      background: var(--secondary);
      color: #fff;
      font-weight: 700;
      border-radius: 30px;
      padding: 0.5rem 1.7rem;
      margin-left: 1.1rem;
      transition: background 0.16s, box-shadow 0.18s;
      box-shadow: 0 2px 12px rgba(16,163,74,0.10);
      border: none;
      letter-spacing: 0.4px;
      font-size: 1.09rem;
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }
    .navbar .btn-login:hover,
    .navbar .btn-login:focus {
      background: #12803c;
      color: #fff;
      box-shadow: 0 4px 18px rgba(16,163,74,0.16);
      outline: none;
    }
    .navbar .nav-item + .nav-item {
      margin-left: 0.4rem;
    }
    .navbar-nav {
      align-items: center;
    }
    @media (max-width: 991px) {
      .navbar .btn-login {
        margin: 0.8rem 0 0 0;
        width: 100%;
        padding: 0.7rem 1.2rem;
        justify-content: center;
      }
      .navbar-nav {
        text-align: center;
        padding-bottom: 0.4rem;
      }
      .navbar .nav-link {
        margin-bottom: 0.25rem;
        padding: 0.6rem 1rem;
      }
    }
    /* Divider below header for subtle separation */
    header.bookloop-header:after {
      content: '';
      display: block;
      height: 2px;
      background: linear-gradient(90deg, var(--primary) 60%, var(--accent) 100%);
      opacity: 0.15;
      margin-top: -2px;
    }
  </style>
  
  <header class="bookloop-header shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-dark py-3">
      <div class="container">
        <a class="navbar-brand" href="/">
          <!-- Optional: Logo image, uncomment and replace with your logo if available -->
          <!-- <img src="/logo1.png" alt="BookLoop Logo" class="brand-logo d-none d-md-inline" /> -->
          <span>
            <i class="fas fa-book-open-reader me-2 d-inline d-md-none" style="font-size:1.5rem"></i>
            BookLoop
          </span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarBookLoop" aria-controls="navbarBookLoop" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarBookLoop">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/browse">Browse Books</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sell">Sell a Book</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
          </ul>
          <a href="/login" class="btn btn-login ms-lg-3 mt-2 mt-lg-0" tabindex="0">
            <i class="fas fa-user-circle"></i>
            <span class="d-none d-md-inline">Login/Signup</span>
          </a>
        </div>
      </div>
    </nav>
  </header>