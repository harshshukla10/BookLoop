<!-- Production-Level Footer with Theme Integration and Bootstrap Layout -->
<style>
    :root {
      --primary: #3B82F6;
      --secondary: #16A34A;
      --accent: #F59E42;
      --background: #F9FAFB;
      --text: #111827;
      --brand-font: 'Inter', 'Roboto', 'Open Sans', Arial, sans-serif;
    }
    footer.bookloop-footer {
      background: #111827;
      color: #F9FAFB;
      font-family: var(--brand-font);
      padding: 2.5rem 0 1.2rem 0;
      margin-top: auto;
      box-shadow: 0 -2px 18px rgba(17,24,39,0.07);
      position: relative;
      z-index: 10;
    }
    .footer-logo {
      font-size: 2rem;
      font-weight: 800;
      letter-spacing: 0.5px;
      color: var(--primary);
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 1rem;
      text-shadow: 0 1px 10px rgba(59,130,246,0.06);
    }
    .footer-logo img {
      width: 2.2rem;
      height: 2.2rem;
      object-fit: contain;
      border-radius: 50%;
      background: #fff;
      padding: 0.25rem;
      box-shadow: 0 2px 8px rgba(59,130,246,0.10);
    }
    .footer-links {
      display: flex;
      justify-content: center;
      gap: 2.2rem;
      flex-wrap: wrap;
      margin-bottom: 1.2rem;
    }
    .footer-links a {
      color: #F9FAFB;
      font-weight: 500;
      font-size: 1.07rem;
      letter-spacing: 0.15px;
      border-radius: 5px;
      padding: 0.3rem 0.9rem;
      transition: color 0.18s, background 0.18s;
      text-decoration: none;
      position: relative;
    }
    .footer-links a:hover,
    .footer-links a:focus {
      color: var(--accent);
      background: rgba(245,158,66,0.08);
      text-decoration: none;
    }
    .footer-social {
      margin-bottom: 1rem;
    }
    .footer-social a {
      color: #F9FAFB;
      margin: 0 0.45rem;
      font-size: 1.3rem;
      transition: color 0.17s;
      vertical-align: middle;
    }
    .footer-social a:hover,
    .footer-social a:focus {
      color: var(--primary);
    }
    .footer-copyright {
      font-size: 0.98rem;
      color: #9CA3AF;
      margin-top: 0.8rem;
      letter-spacing: 0.1px;
    }
    @media (max-width: 767px) {
      .footer-links {
        flex-direction: column;
        gap: 0.65rem;
      }
      .footer-logo {
        flex-direction: column;
        gap: 0.2rem;
      }
      .footer-social {
        margin-bottom: .8rem;
      }
    }
  </style>
  
  <footer class="bookloop-footer">
    <div class="container text-center">
      <div class="footer-logo justify-content-center">
        <!-- Optional: Logo image, replace 'logo1.png' if you have a brand logo -->
        <!-- <img src="/logo1.png" alt="BookLoop Logo" class="d-none d-md-inline" /> -->
        BookLoop
      </div>
      <div class="footer-links">
        <a href="/about">About</a>
        <a href="/faq">FAQ</a>
        <a href="/contact">Contact</a>
        <a href="/privacy">Privacy Policy</a>
        <a href="/terms">Terms</a>
      </div>
      <div class="footer-social">
        <a href="https://twitter.com/" target="_blank" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
        <a href="https://instagram.com/" target="_blank" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
        <a href="https://facebook.com/" target="_blank" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
        <a href="mailto:info@bookloop.com" aria-label="Email"><i class="fas fa-envelope"></i></a>
      </div>
      <div class="footer-copyright">
        &copy; <%= new Date().getFullYear() %> BookLoop. All rights reserved.
      </div>
    </div>
  </footer>