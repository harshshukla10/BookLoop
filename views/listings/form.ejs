<% layout("/layouts/boilerplate") %>

<body>
  <!-- Hero Section -->
  <section id="banner">
    <img
      src="hero-banner.png"
      class="img-fluid w-100"
      alt="Event Banner"
      style="object-fit: cover; max-height: 550px; margin-top: 50px"
    />
  </section>

  <!-- How It Works -->
  <section class="hiw-section">
    <h2 class="fw-bold mb-3">How It Works</h2>
    <div class="hiw-steps">
      <div class="hiw-step">
        <div class="hiw-icon"><i class="fas fa-book-medical"></i></div>
        <div class="h5 mb-2">1. List Your Book</div>
        <p class="mb-0">
          Post your unused textbooks and study guides in just a few clicks.
        </p>
      </div>
      <div class="hiw-step">
        <div class="hiw-icon"><i class="fas fa-bell"></i></div>
        <div class="h5 mb-2">2. Get Requests</div>
        <p class="mb-0">Receive interest from students who need your books.</p>
      </div>
      <div class="hiw-step">
        <div class="hiw-icon"><i class="fas fa-handshake"></i></div>
        <div class="h5 mb-2">3. Exchange Securely</div>
        <p class="mb-0">
          Meet, exchange, or sell your book with safety and trust.
        </p>
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="benefits-section">
    <h2 class="fw-bold text-center mb-4">Why Choose BookLoop?</h2>
    <div class="benefits-list">
      <div class="benefit-item">
        <div class="fa fa-wallet"></div>
        <div class="h6 mt-2">Save on Textbooks</div>
        <div class="small">Affordable and fair pricing, every time.</div>
      </div>
      <div class="benefit-item">
        <div class="fa fa-recycle"></div>
        <div class="h6 mt-2">Eco-Friendly</div>
        <div class="small">Support sustainability by reusing books.</div>
      </div>
      <div class="benefit-item">
        <div class="fa fa-user-friends"></div>
        <div class="h6 mt-2">Connect Locally</div>
        <div class="small">Meet other students in your campus or city.</div>
      </div>
      <div class="benefit-item">
        <div class="fa fa-bolt"></div>
        <div class="h6 mt-2">Easy Listings</div>
        <div class="small">Simple interface for fast posting.</div>
      </div>
    </div>
    <div class="trust-section">
      <span class="me-3"
        ><i class="fa fa-users"></i> Used by 1,000+ students</span
      >
      <span><i class="fa fa-shield-alt"></i> Safe &amp; Verified Listings</span>
    </div>
  </section>

  <!-- Featured Listings -->
  <section class="featured-listings-section">
    <h2 class="fw-bold text-center mb-4">Featured Books</h2>
    <div class="book-cards">
      <div class="book-card">
        <div class="book-title">Discrete Mathematics</div>
        <div class="book-meta">by Kenneth Rosen</div>
        <div class="book-condition">Condition: Excellent</div>
        <div class="book-price mb-1">₹350</div>
        <button class="btn-request">Request</button>
      </div>
      <div class="book-card">
        <div class="book-title">Introduction to Algorithms</div>
        <div class="book-meta">by Cormen et al.</div>
        <div class="book-condition">Condition: Good</div>
        <div class="book-price mb-1">₹600</div>
        <button class="btn-request">Request</button>
      </div>
      <div class="book-card">
        <div class="book-title">Engineering Chemistry</div>
        <div class="book-meta">by O.P. Agarwal</div>
        <div class="book-condition">Condition: Very Good</div>
        <div class="book-price mb-1">₹250</div>
        <button class="btn-request">Request</button>
      </div>
      <div class="book-card">
        <div class="book-title">Data Structures</div>
        <div class="book-meta">by S. Sahni</div>
        <div class="book-condition">Condition: Like New</div>
        <div class="book-price mb-1">₹400</div>
        <button class="btn-request">Request</button>
      </div>
    </div>
  </section>

  <!-- CTA Repeat -->
  <section class="cta-repeat-section">
    <h3 class="fw-bold mb-3">
      Have books lying around? Post your listing now!
    </h3>
    <a href="/sell" class="cta-btn cta-post">Post a Book</a>
    <a href="/browse" class="cta-btn cta-browse">Browse Books</a>
  </section>

  <!-- Testimonials -->
  <section class="testimonials-section">
    <h2 class="fw-bold text-center mb-4">What Students Say</h2>
    <div class="testimonials-list">
      <div class="testimonial">
        <div>
          <i class="fa fa-user-circle"></i>
          <span class="testimonial-author">Amit (IIT Delhi)</span>
        </div>
        <div class="mt-2">
          “I found my semester books for half the price here!”
        </div>
      </div>
      <div class="testimonial">
        <div>
          <i class="fa fa-user-circle"></i>
          <span class="testimonial-author">Priya (DU)</span>
        </div>
        <div class="mt-2">
          “Super easy to sell books and help juniors. Highly recommend!”
        </div>
      </div>
      <div class="testimonial">
        <div>
          <i class="fa fa-user-circle"></i>
          <span class="testimonial-author">Rohan (BITS Pilani)</span>
        </div>
        <div class="mt-2">
          “Great platform, I connected with students in my hostel and saved
          money.”
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="newsletter-section">
    <h4 class="fw-bold mb-2">Get notified when new books are posted</h4>
    <form class="newsletter-form" method="post" action="/subscribe">
      <input
        type="email"
        name="email"
        placeholder="Your email address"
        required
      />
      <button type="submit">Notify Me</button>
    </form>
    <div class="small text-secondary mt-2">No spam. Only book updates!</div>
  </section>
</body>
<style>
  :root {
    --primary: #3b82f6;
    --secondary: #16a34a;
    --accent: #f59e42;
    --background: #f9fafb;
    --text: #111827;
    --shadow: 0 2px 12px rgba(59, 130, 246, 0.07);
    --radius: 1rem;
  }
  body {
    background: var(--background);
    color: var(--text);
    font-family: var(--font-family);
  }
  .hero-section {
    background: linear-gradient(
      100deg,
      var(--primary) 40%,
      var(--secondary) 100%
    );
    color: #fff;
    position: relative;
    overflow: hidden;
    margin-top: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 380px;
    min-width: 100%;
  }
  .hero-image {
    max-width: 360px;
    width: 100%;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    margin-top: 1rem;
    margin-bottom: 1rem;
    display: block;
  }
  .cta-btn {
    font-weight: 600;
    font-size: 1.12rem;
    padding: 0.7rem 2.2rem;
    border-radius: 8px;
    margin-right: 1rem;
    margin-top: 1.2rem;
    transition: background 0.17s, color 0.17s, box-shadow 0.18s;
    border: none;
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.1);
  }
  .cta-post {
    background: var(--secondary);
    color: #fff;
  }
  .cta-post:hover {
    background: #12803c;
  }
  .cta-browse {
    background: #fff;
    color: var(--primary);
    border: 2px solid var(--primary);
  }
  .cta-browse:hover {
    background: var(--accent);
    color: #fff;
    border-color: var(--accent);
  }

  /* How it works */
  .hiw-section {
    background: #fff;
    padding: 3rem 0;
    text-align: center;
  }
  .hiw-steps {
    display: flex;
    justify-content: center;
    gap: 2.5rem;
    flex-wrap: wrap;
    margin-top: 2rem;
  }
  .hiw-step {
    background: var(--background);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    padding: 2rem 1.3rem;
    flex: 1 1 220px;
    max-width: 260px;
    min-width: 170px;
    margin: 0.5rem;
    transition: transform 0.15s;
  }
  .hiw-step:hover {
    transform: translateY(-4px) scale(1.03);
  }
  .hiw-icon {
    font-size: 2.6rem;
    color: var(--primary);
    margin-bottom: 1rem;
  }
  /* Benefits */
  .benefits-section {
    background: var(--background);
    padding: 3rem 0 2.2rem 0;
  }
  .benefits-list {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
    margin-top: 1.6rem;
  }
  .benefit-item {
    background: #fff;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    padding: 1.3rem 1.2rem;
    max-width: 230px;
    min-width: 160px;
    flex: 1 1 180px;
    text-align: center;
  }
  .benefit-item .fa {
    color: var(--accent);
    font-size: 1.6rem;
    margin-bottom: 0.5rem;
  }
  .trust-section {
    text-align: center;
    margin-top: 2.4rem;
    color: var(--secondary);
    font-weight: 600;
  }
  /* Featured Listings */
  .featured-listings-section {
    background: #fff;
    padding: 3rem 0;
  }
  .book-cards {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 1.5rem;
  }
  .book-card {
    background: var(--background);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    padding: 1.3rem 1.1rem;
    width: 220px;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-bottom: 1.2rem;
  }
  .book-title {
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 0.2rem;
  }
  .book-meta {
    font-size: 0.98rem;
    color: #555;
  }
  .book-price {
    color: var(--secondary);
    font-weight: 700;
  }
  .book-condition {
    font-size: 0.93rem;
    margin: 0.2rem 0;
  }
  .btn-request {
    background: var(--accent);
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 0.45rem 1.1rem;
    font-weight: 600;
    margin-top: 0.7rem;
    transition: background 0.16s;
  }
  .btn-request:hover {
    background: #ea851d;
  }
  /* CTA Repeat */
  .cta-repeat-section {
    background: var(--primary);
    color: #fff;
    text-align: center;
    padding: 2.5rem 0 2.2rem 0;
    margin: 2rem 0 0 0;
    border-radius: var(--radius);
  }
  /* Testimonials */
  .testimonials-section {
    background: var(--background);
    padding: 2.5rem 0 2rem 0;
  }
  .testimonials-list {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 1.4rem;
  }
  .testimonial {
    background: #fff;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    padding: 1.15rem 1.1rem;
    max-width: 260px;
    min-width: 170px;
    flex: 1 1 180px;
    text-align: left;
    font-size: 1.03rem;
    color: #222;
  }
  .testimonial .fa-user-circle {
    color: var(--primary);
    font-size: 1.5rem;
    margin-right: 0.6rem;
  }
  .testimonial-author {
    color: var(--secondary);
    font-weight: 600;
    font-size: 1rem;
  }
  /* Newsletter */
  .newsletter-section {
    background: #fff;
    padding: 2.2rem 0 2.6rem 0;
    text-align: center;
    border-radius: var(--radius);
    max-width: 520px;
    margin: 2.4rem auto 0 auto;
    box-shadow: var(--shadow);
  }
  .newsletter-form {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.6rem;
    margin-top: 1.1rem;
  }
  .newsletter-form input[type="email"] {
    border: 1.5px solid var(--primary);
    border-radius: 6px;
    padding: 0.47rem 1rem;
    font-size: 1rem;
    width: 205px;
    margin-right: 0.2rem;
  }
  .newsletter-form button {
    background: var(--secondary);
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 0.48rem 1.1rem;
    font-weight: 600;
    transition: background 0.17s;
  }
  .newsletter-form button:hover {
    background: #12803c;
  }
  /* Language Toggle / Blog */
  .utils-row {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 1.4rem;
    margin-bottom: 0.6rem;
    margin-right: 1.1rem;
  }
  .lang-toggle {
    background: #fff;
    color: var(--primary);
    border: 1.5px solid var(--primary);
    border-radius: 6px;
    padding: 0.28rem 1.1rem;
    font-weight: 600;
    transition: background 0.17s, color 0.17s;
    font-size: 0.98rem;
    margin-left: 0.5rem;
  }
  .lang-toggle:hover {
    background: var(--primary);
    color: #fff;
  }
  .blog-link {
    color: var(--secondary);
    font-weight: 500;
    font-size: 1.02rem;
    text-decoration: underline;
  }
  @media (max-width: 991px) {
    .hero-section,
    .hiw-section,
    .benefits-section,
    .featured-listings-section,
    .testimonials-section,
    .newsletter-section {
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }
    .hiw-steps,
    .benefits-list,
    .book-cards,
    .testimonials-list {
      flex-direction: column;
      align-items: center;
      gap: 1.2rem;
    }
    .newsletter-section {
      max-width: 99vw;
    }
  }
</style>
