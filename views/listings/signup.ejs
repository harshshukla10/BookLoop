<% layout("/layouts/boilerplate") %>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
/>
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<style>
  :root {
    --primary: #3b82f6;
    --secondary: #16a34a;
    --accent: #f59e42;
    --background: #f9fafb;
    --text: #111827;
    --brand-font: "Inter", "Roboto", "Open Sans", Arial, sans-serif;
  }
  body {
    background: var(--background);
    font-family: var(--brand-font);
    min-height: 100vh;
    color: var(--text);
  }
  .signup-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--background);
  }
  .signup-card {
    max-width: 700px;
    width: 100%;
    background: #fff;
    border-radius: 1.3rem;
    box-shadow: 0 6px 36px rgba(59, 130, 246, 0.12),
      0 1.5px 4.5px rgba(17, 24, 39, 0.11);
    padding: 3.2rem 2.7rem 2.7rem 2.7rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .signup-title {
    font-weight: 800;
    color: var(--primary);
    font-size: 2rem;
    letter-spacing: 0.2px;
    margin-bottom: 2.2rem;
    margin-top: 0.5rem;
    text-align: center;
  }
  .form-label {
    font-weight: 600;
    color: var(--text);
    margin-bottom: 0.18rem;
  }
  .form-control,
  .form-select {
    border-radius: 0.7rem;
    background: #f3f6fa;
    border: 1.5px solid #e3e9f4;
    font-size: 1.08rem;
    color: var(--text);
    transition: border 0.15s;
  }
  .form-control:focus,
  .form-select:focus {
    border-color: var(--primary);
    background: #e7f1fd;
    box-shadow: 0 4px 16px rgba(59, 130, 246, 0.1);
  }
  /* Add spacing between rows */
  .form-row {
    margin-bottom: 2rem !important;
  }
  /* Add some vertical space between button and fields */
  .btn-signup-main {
    background: var(--primary);
    color: #fff;
    font-weight: 700;
    border-radius: 0.7rem;
    padding: 0.7rem 1.5rem;
    border: none;
    font-size: 1.17rem;
    letter-spacing: 0.15px;
    transition: background 0.16s, box-shadow 0.14s;
    box-shadow: 0 2px 14px rgba(59, 130, 246, 0.11);
    width: 100%;
    margin-top: 1.7rem;
    margin-bottom: 1.2rem;
  }
  .btn-signup-main:hover,
  .btn-signup-main:focus {
    background: #2563eb;
    color: #fff;
    box-shadow: 0 6px 34px rgba(59, 130, 246, 0.13);
  }
  .login-link {
    color: var(--primary);
    font-weight: 600;
    text-decoration: none;
    margin-left: 5px;
    transition: color 0.15s;
  }
  .login-link:hover {
    color: var(--accent);
    text-decoration: underline;
  }
  @media (max-width: 767px) {
    .signup-card {
      padding: 1.2rem 0.6rem 0.7rem 0.6rem;
      border-radius: 0.8rem;
      box-shadow: 0 4px 20px rgba(59, 130, 246, 0.07);
    }
    .form-row {
      margin-bottom: 1.2rem !important;
    }
  }
</style>

<body>
  <div class="signup-section">
    <div class="signup-card shadow">
      <div class="signup-title mb-4">
        <i class="fas fa-user-plus me-2"></i>Sign Up
      </div>
      <form
        method="post"
        action="/signup"
        autocomplete="on"
        class="w-100 needs-validation"
        novalidate
      >
      <div class="row gx-4 form-row">
        <div class="col-md-6">
          <label for="signup-first-name" class="form-label">First Name</label>
          <input
            type="text"
            class="form-control"
            id="signup-first-name"
            name="first_name"
            placeholder="First name"
            required
            autocomplete="given-name"
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter your first name.</div>
        </div>
        <div class="col-md-6">
          <label for="signup-last-name" class="form-label">Last Name</label>
          <input
            type="text"
            class="form-control"
            id="signup-last-name"
            name="last_name"
            placeholder="Last name"
            required
            autocomplete="family-name"
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter your last name.</div>
        </div>
      </div>
        <div class="row gx-4 form-row">
          <div class="col-md-12">
            <label for="signup-email" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="signup-email"
              name="email"
              placeholder="you@example.com"
              required
              autocomplete="email"
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">
              Please enter a valid email address.
            </div>
          </div>
        </div>
        <div class="row gx-4 form-row">
          <div class="col-md-6">
            <label for="signup-institute" class="form-label"
              >College/Institute Name</label
            >
            <input
              type="text"
              class="form-control"
              id="signup-institute"
              name="institute"
              placeholder="Your college or institute"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">
              Please enter your college or institute name.
            </div>
          </div>
          <div class="col-md-6">
            <label for="signup-grade" class="form-label"
              >Educational Level</label
            >
            <select class="form-select" id="signup-grade" name="grade" required>
              <option value="">Select educational level</option>
              <option value="below10">Below 10th</option>
              <option value="10-12">10th - 12th</option>
              <option value="graduation">Graduation</option>
              <option value="postgraduation">Post Graduation</option>
              <option value="other">Other</option>
            </select>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">
              Please select your educational level.
            </div>
          </div>
        </div>
        <div class="row gx-4 form-row">
          <div class="col-md-6">
            <label for="signup-password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="signup-password"
              name="password"
              placeholder="Password"
              minlength="8"
              required
              autocomplete="new-password"
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter 8 digit password.</div>
          </div>
          <div class="col-md-6">
            <label for="signup-confirm-password" class="form-label"
              >Confirm Password</label
            >
            <input
              type="password"
              class="form-control"
              id="signup-confirm-password"
              name="confirm_password"
              placeholder="Confirm password"
              minlength="8"
              required
              autocomplete="new-password"
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please confirm your 8 digit password.</div>
          </div>
        </div>
        <button type="submit" class="btn btn-signup-main">
          Create Account
        </button>
      </form>
      <div class="mt-3 text-center" style="font-size: 1.01rem">
        Already have an account?
        <a href="/login" class="login-link">Login</a>
      </div>
    </div>
  </div>
</body>
<script>
  // Bootstrap validation
  (() => {
    "use strict";
    const forms = document.querySelectorAll(".needs-validation");
    Array.from(forms).forEach((form) => {
      form.addEventListener(
        "submit",
        (event) => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
