<% layout("/layouts/boilerplate") %>

  <body>
    <!-- Hero Section -->
    <section id="banner">
      <img src="hero-banner.png" class="img-fluid w-100" alt="Event Banner"
        style="object-fit: cover; max-height: 550px; margin-top: 50px" />
    </section>
    <section>


      <div class="container my-5">
        <h2 class="mb-4 text-center fw-bold mb-4 text-center">Explore Books by Genre</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
          <!-- Science Fiction -->
          <div class="col">
            <div class="card h-100 shadow-sm border-primary">
              <img src="science.png" class="card-img-top genre-img" alt="Science Fiction Book Cover">
              <div class="card-body">
                <h5 class="card-title text-primary">Science Fiction</h5>
                <p class="card-text">Futuristic adventures, space odysseys, and bold explorations.</p>
              </div>
              <div class="card-footer bg-transparent border-0">
                <a href="/browse" class="btn btn-primary btn-sm w-100">Browse Sci-Fi</a>
              </div>
            </div>
          </div>
          <!-- Romance -->
          <div class="col">
            <div class="card h-100 shadow-sm border-danger">
              <img src="love.png" class="card-img-top genre-img" alt="Romance Book Cover">
              <div class="card-body">
                <h5 class="card-title text-danger">Romance</h5>
                <p class="card-text">Heartfelt tales of love, relationships, and passion.</p>
              </div>
              <div class="card-footer bg-transparent border-0">
                <a href="/browse" class="btn btn-danger btn-sm w-100">Browse Romance</a>
              </div>
            </div>
          </div>
          <!-- Mystery -->
          <div class="col">
            <div class="card h-100 shadow-sm border-dark">
              <img src="detective.png" class="card-img-top genre-img" alt="Mystery Book Cover">
              <div class="card-body">
                <h5 class="card-title text-dark">Mystery</h5>
                <p class="card-text">Whodunits, thrillers, and puzzles to keep you guessing.</p>
              </div>
              <div class="card-footer bg-transparent border-0">
                <a href="/browse" class="btn btn-dark btn-sm w-100">Browse Mystery</a>
              </div>
            </div>
          </div>
          <!-- Fantasy -->
          <div class="col">
            <div class="card h-100 shadow-sm border-success">
              <img src="castle.png" class="card-img-top genre-img" alt="Fantasy Book Cover">
              <div class="card-body">
                <h5 class="card-title text-success">Fantasy</h5>
                <p class="card-text">Magical realms, epic quests, and legendary creatures.</p>
              </div>
              <div class="card-footer bg-transparent border-0">
                <a href="/books?genre=fantasy" class="btn btn-success  w-100">Browse Fantasy</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="benefits-section py-5 bg-white">
      <div class="container">
        <h2 class="fw-bold text-center mb-4">Why Choose BookLoop?</h2>
        <div class="row justify-content-center g-4">
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card flex-fill text-center shadow-sm border-0 benefit-item">
              <div class="card-body d-flex flex-column align-items-center">
                <div class="fa fa-wallet mb-3 fs-2 text-warning"></div>
                <h6 class="fw-semibold mb-2">Save on Textbooks</h6>
                <div class="small">Affordable and fair pricing, every time.</div>
              </div>
            </div>
          </div>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card flex-fill text-center shadow-sm border-0 benefit-item">
              <div class="card-body d-flex flex-column align-items-center">
                <div class="fa fa-recycle mb-3 fs-2 text-success"></div>
                <h6 class="fw-semibold mb-2">Eco-Friendly</h6>
                <div class="small">Support sustainability by reusing books.</div>
              </div>
            </div>
          </div>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card flex-fill text-center shadow-sm border-0 benefit-item">
              <div class="card-body d-flex flex-column align-items-center">
                <div class="fa fa-user-friends mb-3 fs-2 text-primary"></div>
                <h6 class="fw-semibold mb-2">Connect Locally</h6>
                <div class="small">
                  Meet other students in your campus or city.
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card flex-fill text-center shadow-sm border-0 benefit-item">
              <div class="card-body d-flex flex-column align-items-center">
                <div class="fa fa-bolt mb-3 fs-2 text-info"></div>
                <h6 class="fw-semibold mb-2">Easy Listings</h6>
                <div class="small">Simple interface for fast posting.</div>
              </div>
            </div>
          </div>
        </div>
        <div class="trust-section mt-4 text-success fw-semibold text-center">
          <span class="me-3">
            <i class="fa fa-users"></i> Used by 1,000+ students
          </span>
          <span>
            <i class="fa fa-shield-alt"></i> Safe &amp; Verified Listings
          </span>
        </div>
      </div>
    </section>

    <section class="featured-listings-section py-5 bg-white">
      <div class="container">
        <h2 class="fw-bold text-center mb-4">Featured Books</h2>
        <div class="row justify-content-center g-4">
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card flex-fill book-card shadow-sm border-0">
              <div class="card-body d-flex flex-column">
                <img src="rosen.png" alt="Discrete Mathematics" class="img-fluid mb-3 rounded">
                <div class="book-title fw-semibold fs-5 mb-1 text-primary">
                  Discrete Mathematics
                </div>
                <div class="book-meta mb-1 text-muted">by Kenneth Rosen</div>
                <div class="book-condition mb-1 text-success">
                  Condition: Excellent
                </div>
                <div class="book-price mb-2 fw-bold text-success">₹350</div>
                <button class="btn btn-warning btn-request mt-auto fw-semibold">
                  Request
                </button>
              </div>
            </div>
          </div>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card flex-fill book-card shadow-sm border-0">
              <div class="card-body d-flex flex-column">
                <img src="et al.png" alt="algo" class="img-fluid mb-3 rounded">
                <div class="book-title fw-semibold fs-5 mb-1 text-primary">
                  Introduction to Algorithms
                </div>
                <div class="book-meta mb-1 text-muted">by Cormen et al.</div>
                <div class="book-condition mb-1 text-success">
                  Condition: Good
                </div>
                <div class="book-price mb-2 fw-bold text-success">₹600</div>
                <button class="btn btn-warning btn-request mt-auto fw-semibold">
                  Request
                </button>
              </div>
            </div>
          </div>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card flex-fill book-card shadow-sm border-0">
              <div class="card-body d-flex flex-column">
                <img src="agar.png" alt="Chemistry" class="img-fluid mb-3 rounded">
                <div class="book-title fw-semibold fs-5 mb-1 text-primary">
                  Engineering Chemistry
                </div>
                <div class="book-meta mb-1 text-muted">by O.P. Agarwal</div>
                <div class="book-condition mb-1 text-success">
                  Condition: Very Good
                </div>
                <div class="book-price mb-2 fw-bold text-success">₹250</div>
                <button class="btn btn-warning btn-request mt-auto fw-semibold">
                  Request
                </button>
              </div>
            </div>
          </div>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card flex-fill book-card shadow-sm border-0">
              <img src="sahni.png" alt="dsa" class="img-fluid mb-3 rounded">
              <div class="card-body d-flex flex-column">
                <div class="book-title fw-semibold fs-5 mb-1 text-primary">
                  Data Structures
                </div>
                <div class="book-meta mb-1 text-muted">by S. Sahni</div>
                <div class="book-condition mb-1 text-success">
                  Condition: Like New
                </div>
                <div class="book-price mb-2 fw-bold text-success">₹400</div>
                <button class="btn btn-warning btn-request mt-auto fw-semibold">
                  Request
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Repeat -->
    <section class="py-5 bg-light cta-repeat-section">
      <div class="container text-center">
        <h3 class="fw-bold mb-3">
          Have books lying around? Post your listing now!
        </h3>
        <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
          <a href="/sell" class="btn btn-success fw-semibold px-4 py-2">Post a Book</a>
          <a href="/browse" class="btn btn-outline-primary fw-semibold px-4 py-2">Browse Books</a>
        </div>
      </div>
    </section>

    <!-- Testimonials Section: Bootstrap Responsive Flex Cards -->
    <section class="testimonials-section py-5 bg-light">
      <div class="container">
        <h2 class="fw-bold text-center mb-4">What Students Say</h2>
        <div class="row justify-content-center g-4">
          <div class="col-12 col-md-6 col-lg-4 d-flex">
            <div class="card flex-fill testimonial shadow-sm border-0">
              <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                  <i class="fa fa-user-circle fa-2x text-primary me-2"></i>
                  <span class="testimonial-author fw-semibold">Amit (IIT Delhi)</span>
                </div>
                <div class="mt-2 fst-italic">
                  “I found my semester books for half the price here!”
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-md-6 col-lg-4 d-flex">
            <div class="card flex-fill testimonial shadow-sm border-0">
              <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                  <i class="fa fa-user-circle fa-2x text-primary me-2"></i>
                  <span class="testimonial-author fw-semibold">Priya (DU)</span>
                </div>
                <div class="mt-2 fst-italic">
                  “Super easy to sell books and help juniors. Highly recommend!”
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-md-6 col-lg-4 d-flex">
            <div class="card flex-fill testimonial shadow-sm border-0">
              <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                  <i class="fa fa-user-circle fa-2x text-primary me-2"></i>
                  <span class="testimonial-author fw-semibold">Rohan (BITS Pilani)</span>
                </div>
                <div class="mt-2 fst-italic">
                  “Great platform, I connected with students in my hostel and saved money.”
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <link rel="stylesheet" href="landing.css" />

  </body>