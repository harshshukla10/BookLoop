<% layout("/layouts/boilerplate") %>
<body>
    <style>
        .hiw-section {
      background: var(--background);
      padding: 3rem 0;
    }

    .hiw-steps {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
    }

    .hiw-step {
      background: #fff;
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      min-width: 220px;
      max-width: 280px;
      transition: transform 0.16s, box-shadow 0.16s;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .hiw-step:hover {
      transform: translateY(-6px) scale(1.03);
      box-shadow: 0 6px 24px rgba(59, 130, 246, 0.13);
    }

    .hiw-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2.7rem;
      color: var(--primary);
      width: 64px;
      height: 64px;
      border-radius: 16px;
      background: rgba(59, 130, 246, 0.08);
      box-shadow: 0 2px 8px rgba(59, 130, 246, 0.07);
      margin-bottom: 1rem;
    }

    @media (max-width: 991px) {
      .hiw-steps {
        flex-direction: column;
        gap: 1.2rem;
        align-items: center;
      }

      .hiw-step {
        width: 90%;
        min-width: unset;
        max-width: 400px;
      }
    }

    </style>
 

        <!-- Hero Section -->
        <section id="banner">
            
            <img src="sell.png" class="img-fluid w-100" alt="Event Banner"
              style="object-fit: cover; max-height: 550px; margin-top: 50px" />
          </section>
          <section>
      
        
        <!-- Book Submission Form -->
        <section class="py-5">
          <div class="container">
            <form>
              <h3 class="mb-4">A. Book Details</h3>
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label">Title <span class="text-danger">*</span></label>
                  <input type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                  <label class="form-label">Author(s) <span class="text-danger">*</span></label>
                  <input type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                  <label class="form-label">Genre/Category</label>
                  <select class="form-select">
                    <option>Academic</option>
                    <option>Fiction</option>
                    <option>Non-Fiction</option>
                    <option>Mystery</option>
                  </select>
                </div>
                <div class="col-md-6">
                  <label class="form-label">ISBN</label>
                  <input type="text" class="form-control">
                </div>
                <div class="col-md-6">
                  <label class="form-label">Publisher</label>
                  <input type="text" class="form-control">
                </div>
                <div class="col-md-3">
                  <label class="form-label">Year of Publication</label>
                  <input type="number" class="form-control">
                </div>
                <div class="col-md-3">
                  <label class="form-label">Edition</label>
                  <input type="text" class="form-control">
                </div>
                <div class="col-md-6">
                  <label class="form-label">Language</label>
                  <select class="form-select">
                    <option>English</option>
                    <option>Hindi</option>
                    <option>Other</option>
                  </select>
                </div>
                <div class="col-md-6">
                  <label class="form-label">Format</label>
                  <select class="form-select">
                    <option>Paperback</option>
                    <option>Hardcover</option>
                    <option>eBook</option>
                    <option>Audiobook</option>
                  </select>
                </div>
                <div class="col-12">
                  <label class="form-label">Description <span class="text-danger">*</span></label>
                  <textarea class="form-control" rows="4" required></textarea>
                </div>
              </div>
        
              <hr class="my-5">
        
              <h3 class="mb-4">B. Book Condition & Pricing</h3>
              <div class="row g-3">
                <div class="col-md-4">
                  <label class="form-label">Condition</label>
                  <select class="form-select">
                    <option>New</option>
                    <option>Like New</option>
                    <option>Good</option>
                    <option>Acceptable</option>
                  </select>
                </div>
                <div class="col-md-4">
                  <label class="form-label">Price (₹)</label>
                  <input type="number" class="form-control" required>
                </div>
                <div class="col-md-4">
                  <label class="form-label">Original Price (optional)</label>
                  <input type="number" class="form-control">
                </div>
                <div class="col-md-6">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="exchangeAvailable">
                    <label class="form-check-label" for="exchangeAvailable">Open for exchange?</label>
                  </div>
                  <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" id="negotiablePrice">
                    <label class="form-check-label" for="negotiablePrice">Price is negotiable</label>
                  </div>
                </div>
              </div>
        
              <hr class="my-5">
        
              <h3 class="mb-4">C. Photos</h3>
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label">Book Cover Photo <span class="text-danger">*</span></label>
                  <input type="file" class="form-control" required>
                </div>
                <div class="col-md-6">
                  <label class="form-label">Additional Photos</label>
                  <input type="file" class="form-control" multiple>
                </div>
              </div>
        
              <hr class="my-5">
        
              <h3 class="mb-4">D. Location & Contact</h3>
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label">Location</label>
                  <input type="text" class="form-control">
                </div>
                <div class="col-md-6">
                  <label class="form-label">Distance Willing to Deliver/Meet (in km)</label>
                  <input type="number" class="form-control">
                </div>
                <div class="col-md-6">
                  <label class="form-label">Contact Preference</label>
                  <select class="form-select">
                    <option>Email</option>
                    <option>Phone</option>
                    <option>In-app Chat</option>
                  </select>
                </div>
                <div class="col-md-6">
                  <label class="form-label">Contact Details</label>
                  <input type="text" class="form-control" required>
                </div>
              </div>
        
              <hr class="my-5">
        
              <h3 class="mb-4">E. Seller Info</h3>
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label">Name</label>
                  <input type="text" class="form-control" value="Harsh Shukla" readonly>
                </div>
                <div class="col-md-3">
                  <label class="form-label">User Rating</label>
                  <input type="text" class="form-control" value="4.8 ★" readonly>
                </div>
                
              </div>
        
              <hr class="my-5">
        
              <div class="d-flex gap-3">
                <button type="submit" class="btn btn-success px-4">Post Book</button>
                <button type="button" class="btn btn-outline-secondary px-4">Preview</button>
              </div>
            </form>
          </div>
        </section>

        <section>
            <div class="w-full max-w-3xl mx-auto p-4">
                <h2 class="text-3xl font-bold mb-6 text-center text-gray-800"> ❓ Frequently Asked Questions</h2>
                <div class="space-y-4">
                  
                  <!-- FAQ Item -->
                  <details class="p-4 border border-gray-200 rounded-xl bg-white shadow-sm open:shadow-md">
                    <summary class="cursor-pointer font-semibold text-blue-600 text-lg">
                      How do I post a book for sale or exchange?
                    </summary>
                    <p class="mt-2 text-gray-700">
                      Simply click on the “Post a Book” button, fill out the details such as title, author, condition, and price (or exchange terms), and submit. Your listing will be visible to other students immediately.
                    </p>
                  </details>
              
                  <details class="p-4 border border-gray-200 rounded-xl bg-white shadow-sm open:shadow-md">
                    <summary class="cursor-pointer font-semibold text-blue-600 text-lg">
                      Is it free to use this platform?
                    </summary>
                    <p class="mt-2 text-gray-700">
                      Yes! The platform is 100% free for students to buy, sell, or exchange books. No listing or transaction fees are involved.
                    </p>
                  </details>
              
                  <details class="p-4 border border-gray-200 rounded-xl bg-white shadow-sm open:shadow-md">
                    <summary class="cursor-pointer font-semibold text-blue-600 text-lg">
                      What kind of books can I list?
                    </summary>
                    <p class="mt-2 text-gray-700">
                      You can list academic textbooks, reference guides, study materials, or any course-related books. Please avoid listing novels, magazines, or unrelated content.
                    </p>
                  </details>
              
                  <details class="p-4 border border-gray-200 rounded-xl bg-white shadow-sm open:shadow-md">
                    <summary class="cursor-pointer font-semibold text-blue-600 text-lg">
                      How do I contact another student?
                    </summary>
                    <p class="mt-2 text-gray-700">
                      Each listing has a “Contact Seller” button. You can message the student through our internal messaging system to discuss details or arrange pickup.
                    </p>
                  </details>
              
                  <details class="p-4 border border-gray-200 rounded-xl bg-white shadow-sm open:shadow-md">
                    <summary class="cursor-pointer font-semibold text-blue-600 text-lg">
                      What should I do once my book is sold or exchanged?
                    </summary>
                    <p class="mt-2 text-gray-700">
                      Please go to your dashboard and mark the book as “Sold” or “Exchanged” so it no longer appears in active listings. This keeps the platform updated for others.
                    </p>
                  </details>
              
                </div>
              </div>
              
        </section>
        
        
        <section class="hiw-section py-5">
            <div class="container">
                <h2 class="fw-bold mb-4 text-center">How It Works</h2>
                <div class="d-flex flex-column flex-md-row justify-content-center align-items-stretch gap-4 hiw-steps">
                    <div class="card hiw-step flex-fill text-center border-0 shadow-sm">
                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="hiw-icon mb-3">
                                <i class="fas fa-book-medical"></i>
                            </div>
                            <h5 class="mb-2 fw-semibold">1. List Your Book</h5>
                            <p class="mb-0">
                                Post your unused textbooks and study guides in just a few clicks.
                            </p>
                        </div>
                    </div>
                    <div class="card hiw-step flex-fill text-center border-0 shadow-sm">
                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="hiw-icon mb-3">
                                <i class="fas fa-bell"></i>
                            </div>
                            <h5 class="mb-2 fw-semibold">2. Get Requests</h5>
                            <p class="mb-0">
                                Receive interest from students who need your books.
                            </p>
                        </div>
                    </div>
                    <div class="card hiw-step flex-fill text-center border-0 shadow-sm">
                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="hiw-icon mb-3">
                                <i class="fas fa-handshake"></i>
                            </div>
                            <h5 class="mb-2 fw-semibold">3. Exchange Securely</h5>
                            <p class="mb-0">
                                Meet, exchange, or sell your book with safety and trust.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        
        <!-- Additional Page Content -->
        <section class="bg-light py-5">
          <div class="container">
            <h4>📌 Posting Guidelines</h4>
            <ul>
              <li>Upload clear images of the actual book.</li>
              <li>Mention accurate condition and price.</li>
              <li>Avoid sharing personal info in the description.</li>
            </ul>
        
            <p class="mt-4">
              🔗 <a href="#">Terms and Conditions</a> |
              📧 <a href="#">Contact Support</a>
            </p>
          </div>
        </section>
        
        <!-- Bootstrap JS Bundle (for future interactivity, not needed for cards layout) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        
</body>