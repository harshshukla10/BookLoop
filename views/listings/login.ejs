<% layout("/layouts/boilerplate") %>
<style>
  :root {
    --primary: #3B82F6;
    --secondary: #16A34A;
    --accent: #F59E42;
    --background: #F9FAFB;
    --text: #111827;
    --brand-font: 'Inter', 'Roboto', 'Open Sans', Arial, sans-serif;
  }
  body {
    background: var(--background);
    font-family: var(--brand-font);
    min-height: 100vh;
    color: var(--text);
  }
  .login-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--background);
  }
  .login-card {
    width: 100%;
    max-width: 410px;
    box-shadow: 0 6px 36px rgba(59,130,246,0.10), 0 1.5px 4.5px rgba(17,24,39,0.13);
    border-radius: 1.3rem;
    background: #fff;
    padding: 2.5rem 2rem 2.2rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .login-card h3 {
    font-weight: 800;
    color: var(--primary);
    margin-bottom: 1.2rem;
    font-size: 2rem;
    letter-spacing: 0.2px;
  }
  .form-label {
    font-weight: 600;
    color: var(--text);
    margin-bottom: 0.2rem;
  }
  .form-control {
    border-radius: 0.7rem;
    padding: 0.7rem 1rem;
    background: #F3F6FA;
    border: 1.5px solid #e3e9f4;
    font-size: 1.08rem;
    color: var(--text);
    margin-bottom: 1rem;
    transition: border 0.15s;
  }
  .form-control:focus {
    border-color: var(--primary);
    background: #e7f1fd;
    box-shadow: 0 4px 16px rgba(59,130,246,0.12);
  }
  .btn-login-main {
    background: var(--primary);
    color: #fff;
    font-weight: 700;
    border-radius: 0.7rem;
    padding: 0.6rem 1.4rem;
    border: none;
    font-size: 1.12rem;
    letter-spacing: 0.2px;
    transition: background 0.16s, box-shadow 0.14s;
    box-shadow: 0 2px 14px rgba(59,130,246,0.11);
    width: 100%;
    margin-top: 0.8rem;
  }
  .btn-login-main:hover, .btn-login-main:focus {
    background: #2563eb;
    color: #fff;
    box-shadow: 0 6px 34px rgba(59,130,246,0.13);
  }
  .forgot-link {
    float: right;
    font-size: 0.98rem;
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
    margin-bottom: 1.0rem;
    transition: color 0.15s;
  }
  .forgot-link:hover {
    color: var(--accent);
    text-decoration: underline;
  }
  .signup-link {
    color: var(--primary);
    font-weight: 600;
    text-decoration: none;
    margin-left: 5px;
    transition: color 0.15s;
  }
  .signup-link:hover {
    color: var(--accent);
    text-decoration: underline;
  }
  .divider {
    text-align: center;
    margin: 1.3rem 0;
    color: #a3a9b8;
    font-size: 1rem;
    position: relative;
    width: 100%;
  }
  .divider:before, .divider:after {
    content: '';
    display: inline-block;
    height: 1.5px;
    width: 28%;
    background: #e3e9f4;
    vertical-align: middle;
    margin: 0 0.7rem;
  }
  @media (max-width: 575px) {
    .login-card {
      padding: 1.5rem 0.7rem 1.2rem 0.7rem;
      border-radius: 0.8rem;
      box-shadow: 0 4px 20px rgba(59,130,246,0.07);
    }
  }
</style>

<body>
  <div class="login-section">
    <div class="login-card shadow-lg">
      <h3 class="text-center mb-2"><i class="fas fa-sign-in-alt me-2"></i>Login</h3>
      <form method="post" action="/login" autocomplete="on" style="width:100%;" class="needs-validation" novalidate >
        <div class="mb-3">
          <label for="login-email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            id="login-email"
            name="email"
            placeholder="you@example.com"
            required
            autocomplete="email"
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter your email.</div>
        </div>
        <div class="mb-2">
          <label for="login-password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="login-password"
            name="password"
            placeholder="Password"
            required
            autocomplete="current-password"
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter your password.</div>
        </div>
        <div class="mb-2 d-flex justify-content-between align-items-center">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="rememberMe" name="remember">
            <label class="form-check-label" for="rememberMe">
              Remember me
            </label>
          </div>
          <a href="/forgot-password" class="forgot-link">Forgot password?</a>
        </div>
        <button type="submit" class="btn btn-login-main">Login</button>

        <div class="divider">or</div>
        <div class="d-grid gap-2">
          <a href="/auth/google" class="btn btn-outline-primary" style="border-radius: 0.7rem;">
            <i class="fab fa-google me-2"></i>Login with Google
          </a>
          <a href="/auth/facebook" class="btn btn-outline-primary" style="border-radius: 0.7rem;">
            <i class="fab fa-facebook-f me-2"></i>Login with Facebook
          </a>
        </div>
      </form>
      <div class="mt-4 text-center" style="font-size:1.01rem;">
        Don't have an account? 
        <a href="/signup" class="signup-link">Sign up</a>
      </div>
    </div>
  </div>
</body>
<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
(() => {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  const forms = document.querySelectorAll('.needs-validation')

  // Loop over them and prevent submission
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }

      form.classList.add('was-validated')
    }, false)
  })
})()
</script>