<% layout("/layouts/boilerplate") %>
<body>
    

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-lg-5 col-md-7 col-sm-9">
                <div class="auth-card">
                    <!-- Header -->
                    <div class="auth-header text-center mb-4">
                        <div class="auth-icon mb-3">
                            <i class="fas fa-book-reader"></i>
                        </div>
                        <h2 class="auth-title">Welcome Back</h2>
                        <p class="auth-subtitle">Sign in to access your learning journey</p>
                    </div>

                    <!-- Error/Success Messages -->
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger alert-custom" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <%= error %>
                        </div>
                    <% } %>
                    
                    <% if (typeof success !== 'undefined' && success) { %>
                        <div class="alert alert-success alert-custom" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <%= success %>
                        </div>
                    <% } %>

                    <!-- Login Form -->
                    <form action="/auth/login" method="POST" class="auth-form" id="loginForm">
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email Address
                            </label>
                            <input 
                                type="email" 
                                class="form-control form-control-custom" 
                                id="email" 
                                name="email" 
                                placeholder="Enter your email"
                                required
                                value="<%= typeof formData !== 'undefined' ? formData.email || '' : '' %>"
                            >
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <div class="password-input-group">
                                <input 
                                    type="password" 
                                    class="form-control form-control-custom" 
                                    id="password" 
                                    name="password" 
                                    placeholder="Enter your password"
                                    required
                                >
                                <button type="button" class="password-toggle" onclick="togglePassword('password')">
                                    <i class="fas fa-eye" id="password-eye"></i>
                                </button>
                            </div>
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="form-options mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="remember" name="remember">
                                <label class="form-check-label" for="remember">
                                    Remember me
                                </label>
                            </div>
                            <a href="/auth/forgot-password" class="forgot-link">
                                Forgot Password?
                            </a>
                        </div>

                        <button type="submit" class="btn btn-primary-custom w-100 mb-3" id="loginBtn">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            <span class="btn-text">Sign In</span>
                            <span class="btn-spinner d-none">
                                <i class="fas fa-spinner fa-spin"></i> Signing in...
                            </span>
                        </button>
                    </form>

                    <!-- Divider -->
                    <div class="auth-divider">
                        <span>or continue with</span>
                    </div>

                    <!-- Social Login -->
                    <div class="social-login mb-4">
                        <button type="button" class="btn btn-social btn-google" onclick="socialLogin('google')">
                            <i class="fab fa-google me-2"></i>Google
                        </button>
                        <button type="button" class="btn btn-social btn-facebook" onclick="socialLogin('facebook')">
                            <i class="fab fa-facebook-f me-2"></i>Facebook
                        </button>
                    </div>

                    <!-- Sign Up Link -->
                    <div class="auth-footer text-center">
                        <p class="mb-0">
                            Don't have an account? 
                            <a href="/auth/signup" class="auth-link">Create one here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-container {
        background: linear-gradient(135deg, #F9FAFB 0%, #E5E7EB 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .auth-card {
        background: white;
        border-radius: 12px;
        padding: 2.5rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid #E5E7EB;
    }

    .auth-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary-color), #2563EB);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        font-size: 2rem;
        color: white;
    }

    .auth-title {
        color: var(--text-color);
        font-weight: 700;
        font-size: 1.75rem;
        margin-bottom: 0.5rem;
    }

    .auth-subtitle {
        color: #6B7280;
        font-size: 1rem;
        margin-bottom: 0;
    }

    .form-label {
        color: var(--text-color);
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .form-control-custom {
        border: 2px solid #E5E7EB;
        border-radius: var(--border-radius);
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: #FAFAFA;
    }

    .form-control-custom:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.15);
        background-color: white;
    }

    .form-control-custom.is-invalid {
        border-color: #EF4444;
    }

    .form-control-custom.is-valid {
        border-color: var(--secondary-color);
    }

    .password-input-group {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #6B7280;
        cursor: pointer;
        padding: 0;
        font-size: 1rem;
    }

    .password-toggle:hover {
        color: var(--primary-color);
    }

    .form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .form-check-label {
        color: var(--text-color);
        font-size: 0.9rem;
    }

    .forgot-link {
        color: var(--primary-color);
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .forgot-link:hover {
        color: #2563EB;
        text-decoration: underline;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, var(--primary-color), #2563EB);
        border: none;
        border-radius: var(--border-radius);
        padding: 0.875rem 1.5rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .btn-primary-custom:hover {
        transform: translateY(-1px);
        box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
    }

    .btn-primary-custom:active {
        transform: translateY(0);
    }

    .auth-divider {
        text-align: center;
        margin: 1.5rem 0;
        position: relative;
        color: #6B7280;
        font-size: 0.9rem;
    }

    .auth-divider::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: #E5E7EB;
        z-index: 1;
    }

    .auth-divider span {
        background: white;
        padding: 0 1rem;
        position: relative;
        z-index: 2;
    }

    .social-login {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .btn-social {
        border: 2px solid #E5E7EB;
        border-radius: var(--border-radius);
        padding: 0.75rem 1rem;
        font-weight: 500;
        transition: all 0.3s ease;
        background: white;
    }

    .btn-google {
        color: #DB4437;
    }

    .btn-google:hover {
        background: #DB4437;
        color: white;
        border-color: #DB4437;
    }

    .btn-facebook {
        color: #4267B2;
    }

    .btn-facebook:hover {
        background: #4267B2;
        color: white;
        border-color: #4267B2;
    }

    .auth-link {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
    }

    .auth-link:hover {
        color: #2563EB;
        text-decoration: underline;
    }

    .alert-custom {
        border: none;
        border-radius: var(--border-radius);
        padding: 1rem 1.25rem;
        font-size: 0.9rem;
    }

    @media (max-width: 576px) {
        .auth-card {
            padding: 2rem 1.5rem;
            margin: 1rem;
        }

        .social-login {
            grid-template-columns: 1fr;
        }

        .form-options {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

<script>
    function togglePassword(inputId) {
        const input = document.getElementById(inputId);
        const eye = document.getElementById(inputId + '-eye');
        
        if (input.type === 'password') {
            input.type = 'text';
            eye.classList.remove('fa-eye');
            eye.classList.add('fa-eye-slash');
        } else {
            input.type = 'password';
            eye.classList.remove('fa-eye-slash');
            eye.classList.add('fa-eye');
        }
    }

    function socialLogin(provider) {
        window.location.href = `/auth/${provider}`;
    }

    // Form validation and submission
    document.getElementById('loginForm').addEventListener('submit', function(e) {
        const btn = document.getElementById('loginBtn');
        const btnText = btn.querySelector('.btn-text');
        const btnSpinner = btn.querySelector('.btn-spinner');
        
        btn.disabled = true;
        btnText.classList.add('d-none');
        btnSpinner.classList.remove('d-none');
    });

    // Real-time validation
    document.getElementById('email').addEventListener('blur', function() {
        validateEmail(this);
    });

    document.getElementById('password').addEventListener('blur', function() {
        validatePassword(this);
    });

    function validateEmail(input) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        const isValid = emailRegex.test(input.value);
        
        input.classList.remove('is-valid', 'is-invalid');
        if (input.value) {
            input.classList.add(isValid ? 'is-valid' : 'is-invalid');
        }
    }

    function validatePassword(input) {
        const isValid = input.value.length >= 6;
        
        input.classList.remove('is-valid', 'is-invalid');
        if (input.value) {
            input.classList.add(isValid ? 'is-valid' : 'is-invalid');
        }
    }
</script>

<%- include('../partials/footer') %>
