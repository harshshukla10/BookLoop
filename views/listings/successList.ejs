<!-- Book Listing Confirmation Page -->
<% layout("/layouts/boilerplate") %>
<section class="py-5 bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="alert alert-success text-center shadow-sm p-5">
          <h3 class="mb-4">✅ Listing Submitted Successfully!</h3>
          <p class="lead">
            Your book listing has been sent to the admin for review. Once approved, it will be visible to others.
          </p>
          <p class="text-muted">
            Kindly check your <strong>profile</strong> for any updates or status changes.
          </p>
          <a href="/myprofile" class="btn btn-primary mt-4">
            🔍 Go to My Profile
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
